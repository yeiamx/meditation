<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="128dp">
            <ImageView
                android:background="@drawable/lake"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/travel_content_cardback"/>
            <TextView
                android:gravity="center"
                android:id="@+id/travel_noti_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_margin="12dp"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/travel_noti_title"
                android:textSize="12sp"
                android:textColor="@color/backgroundGray"
                android:id="@+id/travel_noti_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Default"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/locked"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>