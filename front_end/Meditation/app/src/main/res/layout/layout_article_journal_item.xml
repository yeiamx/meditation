<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/article_journal_item_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/q"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:id="@+id/article_journal_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="55dp"
        android:text="thinker"
        android:fontFamily="serif"

        />
    <TextView
    android:id="@+id/article_journal_item_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:layout_marginTop="15dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="20dp"
    android:text="2018/10/1"
    android:fontFamily="serif"

    />
    <TextView
        android:id="@+id/article_journal_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="10dp"
        android:text="今天是十月一日"
        android:fontFamily="serif"

        />

</RelativeLayout>